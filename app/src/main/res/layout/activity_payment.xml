<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="rural.gamemoney.Payment"
        android:columnCount="4"
        android:rowCount="4"

>

    <TextView
            android:background="@drawable/roundbutton"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/totalToPay"
            android:gravity="center" android:layout_above="@+id/gridLayout" android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"/>
    <GridLayout tools:context="rural.gamemoney.Payment" xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" android:columnCount="3" android:rowCount="4"
                android:id="@+id/gridLayout"
                android:layout_above="@+id/btnPayPayment" android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp">
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="1" android:id="@+id/btn1"
                android:layout_row="0" android:layout_column="0" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="2" android:id="@+id/btn2"
                android:layout_row="0" android:layout_column="1" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="3" android:id="@+id/btn3"
                android:layout_row="0" android:layout_column="2" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="4" android:id="@+id/btn4"
                android:layout_row="1" android:layout_column="0" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="5" android:id="@+id/btn5"
                android:layout_row="1" android:layout_column="1" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="6" android:id="@+id/btn6"
                android:layout_row="1" android:layout_column="2" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="7" android:id="@+id/btn7"
                android:layout_row="2" android:layout_column="0" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="8" android:id="@+id/btn8"
                android:layout_row="2" android:layout_column="1" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="9" android:id="@+id/btn9"
                android:layout_row="2" android:layout_column="2" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="0" android:id="@+id/btn0"
                android:layout_row="3" android:layout_column="1" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
        <Button android:layout_width="70dp" android:layout_height="70dp" android:text="&lt;-" android:id="@+id/btnErase"
                android:layout_row="3" android:layout_column="2" android:background="@drawable/roundbutton"
                android:layout_margin="5dp"/>
    </GridLayout>
    <Button android:background="@drawable/roundbutton" android:layout_width="140dp" android:layout_height="50dp"
            android:text="pay" android:id="@+id/btnPayPayment"
            android:layout_alignTop="@+id/btnGetPayment" android:layout_alignParentStart="true"/>
    <Button android:background="@drawable/roundbutton" android:layout_width="140dp" android:layout_height="50dp"
            android:text="get" android:id="@+id/btnGetPayment"
            android:layout_alignParentBottom="true" android:layout_alignEnd="@+id/totalToPay"/>
</RelativeLayout>
